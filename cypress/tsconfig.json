{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["cypress-real-events"],
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": [ "**/*.ts", "**/*.tsx"],
  "exclude": [
    "../cypress.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
